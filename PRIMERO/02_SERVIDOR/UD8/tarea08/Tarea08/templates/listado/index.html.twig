{% extends 'base.html.twig' %}

{% block title %}Hello ListadoController!
{% endblock %}

{% block body %}

{% include 'common/_messages.html.twig' %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<table class="table table-dark table-striped table-bordered">
		<thead>
			<tr>
				{# <th scope="row">1</th> #}
				<th scope="col">#</th>
				<th scope="col">Titulo</th>
				<th scope="col">Duraci√≥n</th>
				<th scope="col">Extreno</th>
				<th scope="col">Eliminar</th>

			</tr>
		</thead>
		<tbody>
			{% for pelicula in listado %}
				<tr>
					<td>{{ loop.index }}</td>
					<td>{{ pelicula.titulo }}</td>
					<td>{{ pelicula.duracion }}</td>
					<td>{{ pelicula.fechaEstreno|date('Y-m-d') }}</td>
					<td>
						<form action="{{ path('app_listado') }}" method="post">
							<input type="hidden" name="id" value="{{ pelicula.id }}">
							<button class="btn btn-primary" type="submit">Eliminar</button>							
						</form>
					</td>
				</tr>
			{% endfor %}

		</tbody>
	</table>

	<form action="{{ path('app_pelicula') }}">
		<button class="btn btn-primary" type="submit">crear</button>
	</form>
	
	<br>

	{% if app.user %}
		<div class="mb-3">
			estas identificado como
			{{ app.user.userIdentifier }},
			<a href="{{ path('app_logout') }}">Logout</a>
		</div>
	{% endif %}

{% endblock %}
